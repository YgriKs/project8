using System;

class Program {
    static void Main(string[] args) {
	int n = Convert.ToInt32(Console.ReadLine());
	int K = 0;
	int sum = 0;
		for (int i = 1; i <=n; i++)
		{
			if(i % 2 == 0)
			   {
				   K += 1;
				   sum += i;
			   }
		}
		Console.WriteLine(sum);
		Console.WriteLine(K);
		}
}
